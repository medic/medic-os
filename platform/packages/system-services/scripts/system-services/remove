#!/bin/sh

source '/boot/include/package'

remove()
{
  local self="`realpath "$0"`"
  local base="`dirname "$self"`"

  source "$base/env" &&
  merge_environment /srv || return 255

  rm -rf "$PACKAGE_ROOT" \
    "$PACKAGE_SCRIPTS" "$PACKAGE_STORAGE"/*/logs

  package_remove_empty_directories "$PACKAGE_NAME"
  return "$?"
}

remove "$@"
exit "$?"

