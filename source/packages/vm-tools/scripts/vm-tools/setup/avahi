#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  local target_dir='/var/run/avahi'
  local symlink_path="$PACKAGE_STORAGE/avahi/state"

  mkdir -p "$target_dir" &&
  rm -rf "$symlink_path" &&
  ln -sf "$target_dir" "$symlink_path"

  return "$?"
}

main()
{
  start
  return "$?"
}

main
exit "$?"

